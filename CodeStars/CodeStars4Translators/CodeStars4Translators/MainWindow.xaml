<Window x:Class="CodeStars4Translators.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Найдём порядок переводчиков с исландского на русский?" FontWeight="Bold" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
            <Button Content="Найдём!" Height="31" VerticalAlignment="Top" Width="94" Click="Button_Click" HorizontalAlignment="Center"/>
            <Button Content="Найдём (из файла)!" Height="31" VerticalAlignment="Top" Click="fileDialogButton_Click" HorizontalAlignment="Center"/>
            <Label Content="Результат:" FontWeight="Bold" HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBlock Name="textBlock" TextWrapping="Wrap"  HorizontalAlignment="Center"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>
